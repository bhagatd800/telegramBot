extends layout
block content
  h1 WELCOME
  div(ng-controller='homeController' ng-init="getData()" )
    a(href='/setting') Set Token
    br
    br
    a(href='/pingSetting') Set Ip and Port
    br
    br
    h2 Abailable Data
    table.table.table-striped
        thead.thead-inverse
            tr
            th Family Name
            th Ip
            th Port
            th Repeat Time
            th Action
        tbody
            tr(ng-repeat="data in dataSet")
                td {[{data.familyName}]}
                td {[{data.ip}]}
                td {[{data.port}]}
                td {[{data.repeatTime}]}
                td
                    button.btn.btn-success(type='button', ng-click='start(data._id)') Start
                    button.btn.btn-danger(type='button', ng-click='stop()') Stop
            //{[{dataSet[0].familyName}]}
